{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@typescript-entity/*"
  ],
  "devDependencies": {
    "@strictsoftware/typedoc-plugin-monorepo": "0",
    "@types/jest": "26",
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "4",
    "eslint": "7",
    "jest": "26",
    "lerna": "3",
    "ts-jest": "26",
    "typedoc": "0",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "4"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx tests packages/*/*/src",
    "test": "jest",
    "test:watch": "yarn run test --watch",
    "prebuild": "yarn run lint && yarn run test",
    "build": "lerna run build --stream",
    "postbuild": "yarn run docs",
    "predocs": "rimraf ./docs",
    "docs": "typedoc --excludeNotExported --mode \"modules\" --name \"@typescript-entity\" --out \"./docs\" --readme \"none\" --external-modulemap \".*packages\\/(@typescript-entity\\/[^\\/]+)\\/.*\" --exclude \"packages\\/@typescript-entity\\/core\\/src\\/index.ts\" ./packages"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^(@typescript-entity/.*)$": "<rootDir>/packages/$1/src"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "/tests/.*\\.test\\.(ts|tsx)$"
  }
}
