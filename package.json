{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "4",
    "@types/jest": "26",
    "eslint": "7",
    "jest": "26",
    "ts-jest": "26",
    "typescript": "4"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx tests packages/*/src",
    "test": "jest",
    "test:watch": "yarn run test --watch",
    "build": "for i in `ls ./packages`; do cd packages/$i; echo \"Building package: ${i}\"; yarn run build; cd ../../; done"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@typescript-entity/(.*)$": "<rootDir>/packages/$1/src",
      "lodash-es": "lodash"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "/tests/.*\\.test\\.(ts|tsx)$"
  }
}
